{
  "info": {
    "name": "Travel Planning API",
    "description": "Complete API collection for the Smart Travel Planner backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Trips",
      "item": [
        {
          "name": "Create Trip",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"destination\": {\n    \"city\": \"New York\",\n    \"country\": \"USA\"\n  },\n  \"dates\": {\n    \"startDate\": \"2024-06-01\",\n    \"endDate\": \"2024-06-07\"\n  },\n  \"travelers\": {\n    \"adults\": 2,\n    \"children\": 0\n  },\n  \"budget\": {\n    \"total\": 3000,\n    \"currency\": \"USD\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/trips",
              "host": ["{{baseUrl}}"],
              "path": ["api", "trips"]
            }
          }
        },
        {
          "name": "Get All Trips",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/trips",
              "host": ["{{baseUrl}}"],
              "path": ["api", "trips"]
            }
          }
        }
      ]
    },
    {
      "name": "Flights",
      "item": [
        {
          "name": "Search Flights",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/flights/search?origin=JFK&destination=LAX&departureDate=2024-06-01&passengers=2",
              "host": ["{{baseUrl}}"],
              "path": ["api", "flights", "search"],
              "query": [
                {
                  "key": "origin",
                  "value": "JFK"
                },
                {
                  "key": "destination",
                  "value": "LAX"
                },
                {
                  "key": "departureDate",
                  "value": "2024-06-01"
                },
                {
                  "key": "passengers",
                  "value": "2"
                }
              ]
            }
          }
        },
        {
          "name": "Search Airports",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/flights/airports/search?query=New York",
              "host": ["{{baseUrl}}"],
              "path": ["api", "flights", "airports", "search"],
              "query": [
                {
                  "key": "query",
                  "value": "New York"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Hotels",
      "item": [
        {
          "name": "Search Hotels",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/hotels/search?destination=New York&checkIn=2024-06-01&checkOut=2024-06-07&guests=2&rooms=1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "hotels", "search"],
              "query": [
                {
                  "key": "destination",
                  "value": "New York"
                },
                {
                  "key": "checkIn",
                  "value": "2024-06-01"
                },
                {
                  "key": "checkOut",
                  "value": "2024-06-07"
                },
                {
                  "key": "guests",
                  "value": "2"
                },
                {
                  "key": "rooms",
                  "value": "1"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Weather",
      "item": [
        {
          "name": "Current Weather",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/weather/current?city=New York&country=US",
              "host": ["{{baseUrl}}"],
              "path": ["api", "weather", "current"],
              "query": [
                {
                  "key": "city",
                  "value": "New York"
                },
                {
                  "key": "country",
                  "value": "US"
                }
              ]
            }
          }
        },
        {
          "name": "Weather Forecast",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/weather/forecast?city=New York&days=7",
              "host": ["{{baseUrl}}"],
              "path": ["api", "weather", "forecast"],
              "query": [
                {
                  "key": "city",
                  "value": "New York"
                },
                {
                  "key": "days",
                  "value": "7"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
